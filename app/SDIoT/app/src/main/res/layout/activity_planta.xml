<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planta"
    android:background="@drawable/casa_apagada">

    <ImageView
        android:id="@+id/suite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/suite"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sala"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/garagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/garagem"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cozinha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cozinha"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/quarto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quarto"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/banheiro_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/banheiro_social"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/banheiro_suite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/banheiro_suite"
        android:visibility="gone"/>

</LinearLayout>